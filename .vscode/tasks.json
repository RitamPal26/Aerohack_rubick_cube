{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Solver (Debug)",
      "type": "cppbuild",
      "command": "g++.exe",
      "args": [
        "-std=c++17",
        "-Wall",
        "-g",
        "${workspaceFolder}/src/*.cpp", // This is the corrected line
        "-o",
        "${workspaceFolder}/rubiks_solver_debug.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
